@model mvcdemo.Models.Movie

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MovieLayout.cshtml";
}

<h2>Add Movie</h2>

@using (Html.BeginForm()) 
{
     <div>Movie Title </div>
     @Html.EditorFor(model => model.Title)
     @Html.ValidationMessageFor(model => model.Title)
     <p></p>
     <div>Casting</div>
     @Html.EditorFor(model => model.Casting)
     @Html.ValidationMessageFor(model => model.Casting)
    <p></p>
    <div>Language</div>
    <select name="lang">
        <option value="e">English</option>
        <option value="h">Hindi</option>
        <option value="t">Telugu</option>
    </select>
    <p></p>
    <div>Release Date (mm/dd/yy)</div>
    @Html.EditorFor(model => model.ReleasedOn)
    <p></p>
    <div>Rating</div>
    <select name="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <p></p>
    <input type="submit" value="Add"/>
}

<div class="feedback">@ViewBag.Message</div>

