@model mvcdemo.Models.Course

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course Details</title>
</head>
<body>
    <h1>Course Details</h1>
    <hr />
    @{
        if (Model == null)
        { <h2>Sorry! Course Not Found!</h2> }
        else
        {
            <h2>@Model.Name</h2>
            <h2>@Model.Duration</h2>
            <h2>@Model.Price</h2>
        }
    }

    @Html.ActionLink("List Of Courses", "Index")
</body>
</html>
